function _get_layout() {
  $layout = &backdrop_static(__FUNCTION__);

  if ($layout === NULL) {
    $node = menu_get_object('node');
    $layout = db_query('SELECT * FROM {node_layout} WHERE nid = :nid', array(':nid' => $node->nid))->fetchAllAssoc();
  }

  return $layout;
}

